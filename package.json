  "scripts": {
    "dev": "next dev --turbopack -p 9002",
    "dev:turbo": "next dev --turbopack -p 9002",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "build": "next build",
    "export": "next export",
    "build:plesk": "npm run clean:test && BUILD_TARGET=plesk NODE_ENV=production next build",
    "build:plesk:full": "node scripts/build-plesk.js",
    "build:plesk:optimize": "npm run build:plesk:compress && npm run build:plesk:htaccess",
    "build:plesk:compress": "cd out && find . -name '*.html' -exec gzip -k {} \\; && find . -name '*.css' -exec gzip -k {} \\; && find . -name '*.js' -exec gzip -k {} \\;",
    "build:plesk:htaccess": "node scripts/generate-htaccess.js",
    "build:export": "NODE_ENV=production next build",
    "start": "next start",
    "start:production": "NODE_ENV=production node server.js",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "health:check": "npm run typecheck && npm run lint",
    "clean:cache": "rm -rf .next out",
    "clean:test": "rm -rf src/app/test-* src/app/simple-login src/app/dev-* src/app/debug-* 2>/dev/null || true",
    "clean:rebuild": "rm -rf .next node_modules package-lock.json && npm install && npm run build",
    "firebase:status": "firebase --version && echo 'Firebase CLI OK'",
    "firebase:test-auth": "firebase auth:export test-auth.json --project=$(cat .firebaserc | jq -r '.projects.default') 2>/dev/null || echo 'Firebase auth test skipped'",
    "analyze": "ANALYZE=true npm run build",
    "analyze:plesk": "BUILD_TARGET=plesk ANALYZE=true npm run build:plesk",
    "env:check": "node -e \"console.log('Environment check:', process.env.NODE_ENV || 'development')\"",
    "plesk:deploy": "npm run build:plesk:full && npm run plesk:package",
    "plesk:package": "cd out && tar -czf ../sistema-presenca-ipda-plesk.tar.gz . && echo 'ðŸ“¦ Pacote criado: sistema-presenca-ipda-plesk.tar.gz'",
    "plesk:test": "cd out && python3 -m http.server 8080 || python -m SimpleHTTPServer 8080",
    "plesk:validate": "node scripts/validate-plesk-build.js"
  },
